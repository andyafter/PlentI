{
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "target": "es6",
        "module": "system",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "jasmine"
        ]
    },
    "exclude": [
            "node_modules",
            "typings/main",
            "typings/main.d.ts"
    ]
}
